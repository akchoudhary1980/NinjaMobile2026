@page "/faqpage"
<PageTitle>FAQ Page</PageTitle>


<MudContainer MaxWidth="MaxWidth.False" Class="faq-page">

    <!-- Blurred background circle -->
    <div class="faq-bg-circle"></div>

    <!-- Top Section -->
    <div class="faq-hero">

        <div class="faq-left">
            <span class="faq-small-title">Frequently Asked Questions</span>
            <h1 class="faq-title">FAQ</h1>
            <p class="faq-desc">
                We’re here to help with any questions you have about plans, pricing, and supported features.
            </p>
        </div>

        <div class="faq-right">
            <img class="faq-image" src="/images/web-content/dj-hand.png" />
        </div>

    </div>

    <!-- Purple Stats Box -->
    <div class="faq-stats-box">
        <div class="stat-item">
            <h3>8+ Years</h3>
            <p>Industry Experience</p>
        </div>
        <div class="stat-item">
            <h3>3000+</h3>
            <p>Customer Events</p>
        </div>
        <div class="stat-item">
            <h3>200+</h3>
            <p>Professional Partners</p>
        </div>
    </div>

    <!-- FAQ Content -->
    <div class="faq-content">

        <div class="faq-list">

            @for (int i = 1; i <= 6; i++)
            {
                <div class="faq-item">
                    <h4>What is finance analytics and how can it help my business?</h4>
                </div>
            }

        </div>

        <div class="faq-help-box">
            <h4>Still have a question?</h4>
            <p>Can’t find the answer you’re looking for? Please chat with our friendly team.</p>
            <button class="faq-btn">Get in Touch</button>
        </div>

    </div>

</MudContainer>



<style>
    .faq-page {
    position: relative;
    overflow: hidden;
    padding: 80px 40px;
}

/* 🔴 Blurred Circle */
.faq-bg-circle {
    position: absolute;
    top: -200px;
    left: -200px;
    width: 625px;
    aspect-ratio: 1/1;
    border-radius: 50%;
    opacity: 0.1;
    background: #FF6F61;
    filter: blur(125px);
    pointer-events: none;
}

/* HERO SECTION */
.faq-hero {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
    flex-wrap: wrap;
}

.faq-left {
    max-width: 600px;
}

.faq-small-title {
    color: #333;
    font-family: "DM Sans";
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
}

.faq-title {
    color: #333;
    font-family: "Playfair Display";
    font-size: 48px;
    font-weight: 800;
    text-transform: uppercase;
}

.faq-desc {
    font-size: 18px;
    color: #555;
}

.faq-image {
    width: 100%;
    max-width: 512px;
    height: auto;
    border-radius: 24px;
}

/* PURPLE BOX */
.faq-stats-box {
    margin: 60px auto;
    max-width: 1058px;
    background: #3E1268;
    border-radius: 32px;
    padding: 40px;
    display: flex;
    justify-content: space-around;
    text-align: center;
    flex-wrap: wrap;
    gap: 20px;
}

.stat-item h3 {
    color: #FFF;
    font-size: 36px;
    font-family: "DM Sans";
    font-weight: 600;
}

.stat-item p {
    color: #D9C3EF;
    font-size: 20px;
}

/* FAQ CONTENT */
.faq-content {
    display: flex;
    gap: 40px;
    margin-top: 60px;
    flex-wrap: wrap;
}

.faq-list {
    flex: 1;
}

.faq-item {
    background: #FFF;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 16px;
    box-shadow: 0 0 10px rgba(0,0,0,0.05);
}

/* RIGHT BOX */
.faq-help-box {
    width: 320px;
    background: #3E1268;
    border-radius: 24px;
    padding: 24px;
    color: #FFF;
}

.faq-btn {
    margin-top: 20px;
    background: #FF3B30;
    border: none;
    padding: 12px 20px;
    border-radius: 20px;
    color: white;
    cursor: pointer;
}

@*/* RESPONSIVE */
@media (max-width: 900px) {
    .faq-hero {
        flex-direction: column;
        text-align: center;
    }

    .faq-content {
        flex-direction: column;
    }

    .faq-help-box {
        width: 100%;
    }
}*@

</style>