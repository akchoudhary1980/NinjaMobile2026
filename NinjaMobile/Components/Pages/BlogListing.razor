    @code {
        private int activeDot = 0;
        private System.Timers.Timer? _timer;

        protected override void OnAfterRender(bool firstRender)
        {
            if (firstRender)
            {
                _timer = new System.Timers.Timer(14000); // ⏱ 3 sec
                _timer.Elapsed += (_, _) =>
                {
                    activeDot = (activeDot + 1) % 3;
                    InvokeAsync(StateHasChanged);
                };
                _timer.Start();
            }
        }

        public void Dispose()
        {
            _timer?.Dispose();
        }
    }




    <style>
        .blog-marquee {
            overflow: hidden;
            width: 100%;
            height: 380px;
            padding: 10px 0;
        }

        .blog-marquee-content {
            display: flex;
            gap: 24px;
            width: max-content;
            animation: scroll 35s linear infinite;
        }

        /* Card */
        .blog-icon-wrapper {
            width: 264px;
            height: 264px;
            position: relative;
            flex-shrink: 0;
            border-radius: 32px;
            overflow: hidden;
        }

            /* Image */
            .blog-icon-wrapper img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 32px;
            }

        /* Gradient overlay */
        .blog-bg-zigzig {
            position: absolute;
            inset: 0;
            background: linear-gradient(250deg, rgba(0,0,0,0) 10%, rgba(0,0,0,0.6) 55%, #000 100%);
            z-index: 1;
        }

        /* Small title top */
        .blog-heading-h1 {
            position: absolute;
            top: 20px;
            left: 20px;
            z-index: 2;
            color: #fff;
