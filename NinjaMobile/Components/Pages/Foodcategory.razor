<MudGrid Spacing="4" Class="cate-package-card">

    <MudItem xs="6" sm="12">
        <MudItem xs="12" sm="12">
            <div class="cate-package-img">
                <MudImage Style="width:100%; height:auto; border-radius:16px;" Src="/images/web-content/_dish.png" />
                <div class="cate-veg1-img">
                    <img src="/images/web-content/veg.png" />
                </div>
            </div>
        </MudItem>

        <MudItem xs="12" sm="12">
            <MudGrid Spacing="1">

                <MudItem xs="12" sm="12" Class="mt-3">
                    <h6 class="cate-package-heading">Basic Indian</h6>
                </MudItem>

                <MudItem xs="12" sm="12" Class="mt-1">


                    <MudStack Row="true" AlignItems="AlignItems.Center">
                        <p class="cate-package-details">Starters 1 • Mains 1 <br /> Dessert 1 • Bread / Rice 1</p>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" sm="12" Class="mt-1">
                    <MudStack Row="true" AlignItems="AlignItems.Center">
                        <span class="cate-package-fitfor">Fit For: <b class="package-people">10 people</b></span>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" sm="12" Class="mt-1">
                    <span class="cate-package-gst"><b class="package-price">209</b> +GST</span>
                </MudItem>

                <MudItem xs="12" sm="12" Class="card-box-btn">
                    <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                        <div>
                            <button class="m-0">
                                Add
                            </button>
                        </div>

                        <div>
                            <button>
                                Customize
                            </button>
                        </div>
                    </MudStack>
                </MudItem>

            </MudGrid>
        </MudItem>
    </MudItem>

</MudGrid>


<MudItem xs="12" sm="12" Class="text-end mt-6 pl-4 pe-4">
    <MudButton Variant="Variant.Filled" FullWidth="true" Color="Color.Primary" Size="Size.Medium" Class="btn-primary">View All</MudButton>

</MudItem>

