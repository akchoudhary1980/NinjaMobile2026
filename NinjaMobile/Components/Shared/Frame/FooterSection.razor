@* Footer  *@
<footer class="layout-footer">
    <MudGrid Spacing="1">
        <MudItem xs="12" sm="12">
            <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                <MudText Typo="Typo.h6" Class="mb-0">Let’s keep in touch!</MudText>
                <MudButton Variant="Variant.Filled" Class="pill-button">Send</MudButton>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="12">
            <hr />
        </MudItem>
        <MudItem xs="6" sm="4">
            <MudStack Row="false" Spacing="2">
                <MudLink Color="Color.Inherit">Individuals</MudLink>
                <MudLink Color="Color.Inherit">Business</MudLink>
                <MudLink Color="Color.Inherit">Solutions</MudLink>
                <MudLink Color="Color.Inherit">Partners</MudLink>
            </MudStack>
        </MudItem>
        <MudItem xs="6" sm="4">
            <MudStack Row="false" Spacing="2">
                <MudLink Color="Color.Inherit">About</MudLink>
                <MudLink Color="Color.Inherit">FAQ</MudLink>
                <MudLink Color="Color.Inherit">Partner with us</MudLink>
                <MudLink Color="Color.Inherit">Contact</MudLink>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudStack Row="false" Spacing="2">
                <MudLink Color="Color.Inherit">Privacy policy</MudLink>
                <MudLink Color="Color.Inherit">Terms & conditions</MudLink>
            </MudStack>
        </MudItem>
    </MudGrid>

    <MudGrid Spacing="1" Class="mt-2">
        <MudItem xs="12" sm="12">
            <b class="elegent-text">Elegant</b> <span class="gatherings-text">Gatherings</span>
        </MudItem>
    </MudGrid>

    <MudGrid Spacing="1" Class="mt-2 mb-5">
        <MudItem xs="12" sm="9">
            <MudStack Row="true" Style="height:50px" AlignItems="AlignItems.Center" Justify="Justify.FlexStart">
                <MudText Typo="Typo.caption">© 2025 EZGatherr. All rights reserved.</MudText>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="3">
            <MudStack Row="true" Style="height:50px" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                <div class="layout-link-icons">
                    <MudIcon Icon="@Icons.Custom.Brands.Facebook"></MudIcon>
                </div>
                <div class="layout-link-icons">
                    <MudIcon Icon="@Icons.Custom.Brands.LinkedIn"></MudIcon>
                </div>
                <div class="layout-link-icons">
                    <MudIcon Icon="@Icons.Custom.Brands.Twitter"></MudIcon>
                </div>
                <div class="layout-link-icons">
                    <MudIcon Icon="@Icons.Custom.Brands.WhatsApp"></MudIcon>
                </div>
                <div class="layout-link-icons">
                    <MudIcon Icon="@Icons.Custom.Brands.Instagram"></MudIcon>
                </div>
            </MudStack>
        </MudItem>
    </MudGrid>

</footer>



<style>
    .layout-footer {
        margin-top:15px;
        background-color: #10051A;
        color: #FFFFFF;
        border-start-end-radius: 20px;
        border-start-start-radius: 20px;
        padding-top: 60px;
        padding-left: 80px;
        padding-right: 80px;
        border: 1px solid #10051A;
    }

    .layout-link-icons {
        width: 40px;
        height: 40px;
        background-color: #10051A;
        border: 1px solid #ffffff;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .pill-button {
        padding: 8px 20px;
        background-color: #10051A;
        border: 1px solid #ffffff;
        color: #ffffff;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        .pill-button:hover {
            background-color: #FF4C4C;
        }

    .elegent-text {       
        font-size: 130px;
        font-weight: 600;
        color: #ffffff;
    }

    .gatherings-text {
        font-family: 'Playfair Display', serif;
        font-size: 130px;
        font-weight: 100;
        font-style: italic;
        color: #ffffff;
    }
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .elegent-text,
        .gatherings-text {
            font-size: 64px;
        }
    }

    @@media (max-width: 480px) {
        .elegent-text,
        .gatherings-text {
            font-size: 42px;
        }
    }
</style>