<MudGrid Spacing="0" Class="package-card">

    <MudItem xs="12" sm="12">
        <div class="package-img">
            <MudImage  Style="width:100%; height:auto; border-radius:16px;" Src="/images/web-content/_dish.png" />
            <div class="veg1-img">
                <img src="/images/web-content/veg.png" />
            </div>
        </div>        
       
    </MudItem>

    <MudItem xs="12" sm="12">
        <MudGrid Spacing="1">

            <MudItem xs="12" sm="12" Class="mt-3">
                <h6 class="package-heading">Basic Indian</h6>
            </MudItem>

            <MudItem xs="12" sm="12" Class="mt-1">


                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <p class="package-details">Starters 1 • Mains 1 <br /> Dessert 1 • Bread / Rice 1</p>
                </MudStack>
            </MudItem>

            <MudItem xs="12" sm="12" Class="mt-1">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <span class="package-fitfor">Fit For: <b class="package-people">10 people</b></span>
                </MudStack>
            </MudItem>

            <MudItem xs="12" sm="12" Class="mt-1">
                <span class="package-gst"><b class="package-price">209</b> +GST</span>
            </MudItem>
            <MudItem xs="12" sm="12" Class="mb-2">
                <MudButton @onclick="OpenDrawer" Variant="Variant.Filled"  Color="Color.Primary" Class="card-btn-plan" FullWidth="true" StartIcon="@shopingIcon">Add to cart</MudButton>
            </MudItem>

        </MudGrid>
    </MudItem>
</MudGrid>


<MudDrawer @bind-Open="@_open" Height="100%" Width="100%" Anchor="Anchor.Bottom" Elevation="1" Variant="@DrawerVariant.Temporary" OverlayAutoClose="false">
  
    <div style="height:90vh; overflow-y:auto;">
        <PackageTab IsClose="_open" IsCloseChanged="CloseDrawer" />
    </div>
    
</MudDrawer>

@code{
    private bool _open;

    private void OpenDrawer()
    {
        _open = true;
    }
    private async Task CloseDrawer( bool isclose)
    {
        if(isclose==false)
        {
            _open = isclose;
        }
        else
        {
            // open model here then close drawer 
            await ShowEventInfo();
            _open = false;
        }
    }

    // open dialog
    [Inject] IDialogService Dialog { get; set; }

    private readonly DialogOptions _noHeader = new()
    {
        MaxWidth = MaxWidth.Small,
        NoHeader = true,
        BackgroundClass = "custom-dialog",

        CloseButton = true,
        CloseOnEscapeKey = true
    };

    private async Task ShowEventInfo()
    {
        //MudDialog.Close();
        var parameters = new DialogParameters
        {
             { "ProductFor", "GatherrBento" },
        };
        await Dialog.ShowAsync<EventInformation>("Event Information Dialog", _noHeader);
    }
}


