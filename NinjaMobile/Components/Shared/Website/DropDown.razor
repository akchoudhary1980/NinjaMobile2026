        padding: 0 40px 0 16px;

        color: #A3A3A3;
        font-size: 16px;
        font-weight: 400;
        letter-spacing: -0.32px;

        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;

        outline: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    /* Box hover */
    .custom-select:hover {
        background: #F9F9F9;
        border-color: #DDD;
    }

    /* Box focus (when clicked) */
    .custom-select:focus {
        border-color: #B5B5B5;
        box-shadow: 0 0 0 2px rgba(0,0,0,0.04);
        background: #FFFFFF;
    }

