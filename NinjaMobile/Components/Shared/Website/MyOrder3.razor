                <path d="M7 12L3 8h8L7 12z" fill="currentColor" />
            </svg>
        </div>

        <!-- Dropdown Box -->
        @if (isStatusOpen)
        {
            <div class="recent-dropdown">
                <div class="recent-item active">✓ Recent First</div>
                <div class="recent-item">Oldest First</div>
            </div>
        }

