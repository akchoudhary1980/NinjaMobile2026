
<MudGrid Spacing="0">

    <MudItem xs="12" Class="myorder2-box1">
        <MudStack Row="true" Class="text-center">
            <img class="myorder2-img1" src="/images/web-content/backbutton.svg" />
            <h6 class="myorder2-heading1">My Order</h6>
        </MudStack>
    </MudItem>

    <MudItem xs="12">
        <MudTabs Elevation="0" Rounded="false" ApplyEffectsToContainer="true">
            <MudTabPanel Text="Ongoing">
                @*<MudText>Content One</MudText>*@

            </MudTabPanel>
            <MudTabPanel Text="Order History">
                @*<MudText>Content Two</MudText>*@
            </MudTabPanel>
        </MudTabs>
    </MudItem>


    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
        <MudGrid Spacing="0" Class="mt-4 p-4" Style="background-color: white; border-radius: 24px; ">
            <MudItem xs="4">
                <MudStack Row="true">
                    <img class="myorder2-imgs" src="/images/web-content/_dish.png" />
                </MudStack>
            </MudItem>
            <MudItem xs="8">
                <MudStack Row="true" Justify="Justify.SpaceBetween">
                    <h6 class="myorder2-heading2">Basic Indian</h6>
                    <MudIcon Icon="@CustomIcons.HeadphoneIcon" />
                </MudStack>
                <MudItem xs="12" Class="mt-4">
                    <MudStack Row="true">
                        <MudIcon Icon="@CustomIcons.MyorderBox" />
                        <h6 class="myorder2-para">Order ID:<span class="myorder-heading2" style="font-size:14px;">ORD-2025-001</span> </h6>
                    </MudStack>
                    <MudStack Row="true" Class="mt-2">
                        <MudIcon Icon="@CustomIcons.Myordertruck" />
                        <h6 class="myorder2-para">Delivery in 2 days</h6>
                    </MudStack>
                    <MudStack Row="true" Class="mt-2">
                        <MudIcon Icon="@CustomIcons.MyorderCoin" />
                        <h6 class="myorder2-para">Points Earned:<span class="myorder-heading2" style="font-size:14px;"> 150 Points</span> </h6>
                    </MudStack>
                </MudItem>
            </MudItem>
            <!-- Toggle Button -->
            <div class="order-status-toggle mt-8" @onclick="ToggleStatusBox">
                <MudStack Row="true">
                    <MudIcon Icon="@CustomIcons.Myordertruck"/>
                    <span>Order status</span>

                </MudStack>

                <svg class="@(isStatusOpen ? "arrow rotate" : "arrow")" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                     viewBox="0 0 24 24" fill="none">
                    <path d="M18 9L12 15L6 9" stroke="#B3FD60" stroke-width="1.66667" />
                </svg>
            </div>

            <!-- Black Box -->
            <div class="order-status-box @(isStatusOpen ? "open" : "closed")">

                <div class="order-status-time">
                    <div>Estimated delivery time</div>
                    <h2>09:20</h2>
                </div>

                <div class="order-status-progress">
                    <div class="step active">Order Placed</div>
                    <div class="step active">Order Prepared</div>
                    <div class="step">Order Dispatched</div>
                    <div class="step">Order Delivered</div>
                </div>

            </div>
        </MudGrid>
    </MudContainer>
</MudGrid>


@code {
    bool isStatusOpen = true;

    void ToggleStatusBox()
    {
        isStatusOpen = !isStatusOpen;
    }
}




<style>
    .myorder2-box1 {
        display: flex;
        width: auto;
        height: 57px;
        padding: 16px 16px 1px 16px;
        flex-direction: column;
        align-items: flex-start;
        border-bottom: 1px solid #F7F7F7;
        background: #FFF;
    }

    .myorder2-img1 {
        width: 24px;
        height: 24px;
        flex-shrink: 0;
    }

    .myorder2-heading1 {
        color: #111;
        font-size: 16px;
        font-style: normal;
        font-weight: 600;
        line-height: 24px; 
    }

    .myorder2-imgs {
        width: 96px;
        height: 96px;
        border-radius: 16px;
        opacity: 1;
    }

    .myorder2-heading2 {
        color: #000;
        font-size: 20px;
        font-style: normal;
        font-weight: 600;
        line-height: 130%;
        letter-spacing: -0.4px;
    }

    .myorder2-para {
        color: #666;
        font-size: 14px;
        font-style: normal;
        font-weight: 500;
        line-height: normal;
        letter-spacing: -0.28px;
    }


/*    blackbox css*/
    .order-status-toggle {
        width: 328px;
        height: 56px;
        background: #000;
        border-radius: 16px;
        color: #B3FD60;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 16px;
        cursor: pointer;
        margin: auto;
    }

    .order-status-box {
        width: 328px;
        background: #000;
        border-radius: 24px;
        margin: auto;
        margin-top: 12px;
        overflow: hidden;
        transition: all 0.35s ease;
    }

        /* Closed state */
        .order-status-box.closed {
            height: 0;
            padding: 0;
        }

        /* Open state */
        .order-status-box.open {
            height: 232px;
            padding: 16px;
        }

    /* Arrow animation */
    .arrow {
        transition: transform 0.3s ease;
    }

        .arrow.rotate {
            transform: rotate(180deg);
        }

    /* Inside content */
    .order-status-time {
        color: #B3FD60;
        text-align: center;
    }

        .order-status-time h2 {
            margin: 8px 0;
            font-size: 32px;
        }

    .order-status-progress {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        color: #777;
        font-size: 12px;
    }

        .order-status-progress .step.active {
            color: #B3FD60;
        }

</style>