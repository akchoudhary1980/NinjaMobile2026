
<MudGrid Spacing="0">

    <MudItem xs="12" Class="myorder2-box1">
        <MudStack Row="true" Class="text-center">
            <img class="myorder2-img1" src="/images/web-content/backbutton.svg" />
            <h6 class="myorder2-heading1">My Order</h6>
        </MudStack>
    </MudItem>

    <MudItem xs="12">
        <MudTabs Elevation="0" Rounded="false">
            <MudTabPanel Text="Ongoing" />
            <MudTabPanel Text="Order History" />
        </MudTabs>
    </MudItem>

    <MudContainer MaxWidth="MaxWidth.ExtraLarge">
        <MudGrid Spacing="0" Class="mt-4 p-4" Style="background-color:white;border-radius:24px;">

            <MudItem xs="4">
                <img class="myorder2-imgs" src="/images/web-content/_dish.png" />
            </MudItem>

            <MudItem xs="8">
                <MudStack Row="true" Justify="Justify.SpaceBetween">
                    <h6 class="myorder2-heading2">Basic Indian</h6>
                    <MudIcon Icon="@CustomIcons.HeadphoneIcon" />
                </MudStack>

                <MudStack Row="true" Class="mt-4">
                    <MudIcon Icon="@CustomIcons.MyorderBox" />
                    <h6 class="myorder2-para">Order ID: <b>ORD-2025-001</b></h6>
                </MudStack>

                <MudStack Row="true" Class="mt-2">
                    <MudIcon Icon="@CustomIcons.Myordertruck" />
                    <h6 class="myorder2-para">Delivery in 2 days</h6>
                </MudStack>

                <MudStack Row="true" Class="mt-2">
                    <MudIcon Icon="@CustomIcons.MyorderCoin" />
                    <h6 class="myorder2-para">Points Earned: <b>150</b></h6>
                </MudStack>
            </MudItem>

            <!-- Toggle Button -->
            <div class="order-status-toggle mt-6" @onclick="ToggleStatusBox">
                <MudStack Row="true">
                    <MudIcon Icon="@Icons.Material.Filled.LocalShipping" />
                    <span>Order status</span>
                </MudStack>

                <svg class="@(isStatusOpen ? "arrow rotate" : "arrow")" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M18 9L12 15L6 9" stroke="#B3FD60" stroke-width="1.6" />
                </svg>
            </div>

            <!-- Black Box -->
            <div class="order-status-box @(isStatusOpen ? "open" : "closed")">

                <div class="order-status-time mt-6">
                    <div>Estimated delivery time</div>
                    <h2 class="mt-2">09:20</h2>
                </div>

                <!-- TRACKER -->
                <div class="order-tracker-container mt-4">

                    <div class="track-line-bg">

                        <!-- START CIRCLE -->
                        <div class="track-start-circle">
                            <div class="track-start-circle-inner"></div>
                        </div>

                        <!-- PROGRESS LINE -->
                        <div class="track-line-progress" style="width:@ProgressWidth"></div>

                        <!-- MOVING CIRCLE -->
                        <div class="track-circle-outer" style="left:@CirclePosition">
                            <div class="track-circle-inner"></div>
                        </div>

                    </div>

                    <div class="track-labels mt-8">
                        @for (int i = 0; i < Steps.Length; i++)
                        {
                            <div class="@(i <= CurrentStep ? "label-complete" : "label-pending")">
                                @Steps[i]
                            </div>
                        }
                    </div>

                </div>

            </div>

        </MudGrid>
    </MudContainer>

</MudGrid>

@code {

    bool isStatusOpen = true;
    void ToggleStatusBox() => isStatusOpen = !isStatusOpen;

    // 🔥 0 = Placed, 1 = Prepared, 2 = Dispatched, 3 = Delivered
    int CurrentStep = 1;

    string[] Steps =
    {
        "Order Placed",
        "Order Prepared",
        "Order Dispatched",
        "Order Delivered"
    };

    double ProgressRatio => CurrentStep / 3.0;

    // Progress line starts from center of start circle
    string ProgressWidth => $"calc({ProgressRatio * 100}% + 10px)";

    // Moving circle stays inside bar
    string CirclePosition => $"calc({ProgressRatio * 100}% + 0px)";
}


