
<MudGrid Spacing="0">
    <MudItem xs="12" sm="12" Class="packagetab-box1">
        <MudStack Row="true">
            <img class="packagetab-img1" src="/images/web-content/backbutton.svg" />
            <h6 class="packagetab-heading1"> Basic Indian</h6>
        </MudStack>
    </MudItem>

    <MudItem xs="12">
        <img class="img-package" style="width:100%" src="/images/web-content/packagetab.png" />
        <!--<div class="addon-img-btn">
            <MudIconButton Icon="@Icons.Material.Filled.Close" @onclick="OnClose" Size="Size.Small" Color="Color.Default" />-->
            @*<img src="/images/web-content/cutbutton.png" />*@
        <!--</div>-->
    </MudItem>
    <MudItem class="headingadd mt-4 pl-4" sm="12" Style="padding-right:16px;">
        <p>
            A curated selection of Indian staples — aromatic rice, wholesome curries,
            and breads prepared fresh for everyday events, offering the perfect blend of comfort, taste, and tradition.
        </p>
    </MudItem>


    <MudItem xs="12">
        <MudTabs Centered="false" Elevation="0" Rounded="true" Outlined="false" MinimumTabWidth="0" PanelClass="">
            <MudTabPanel Style="text-transform:none" Text="Package">

            </MudTabPanel>
            <MudTabPanel Style="text-transform:none" Text="Add-on">
                <MudGrid Spacing="0" Class="mt-2" Style="padding:16px;">
                    <MudItem xs="12">
                        <div class="search-box">
                            <img alt="search" class="search-icon" src="/images/web-content/search-icon.png" />
                            <input type="text" placeholder="Search" />
                        </div>
                    </MudItem>

                    <MudItem xs="12" sm="12" Class="mt-6">
                        <MudStack Row="true" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center" Justify="Justify.FlexStart">
                            <MudButton Class="rounded-pill" Variant="Variant.Filled" Color="Color.Dark" Size="Size.Small">All</MudButton>

                            <button class="btn-all">Food</button>
                            <button class="btn-all">Setup Service</button>
                            <button class="btn-all">Pooja</button>
                            <button class="btn-all">Deco</button>
                            <button class="btn-all">Dj</button>
                        </MudStack>
                    </MudItem>
                    <MudItem xs="12">
                        <MudStack Row="false" AlignItems="AlignItems.Center">
                            <MudGrid Spacing="0">
                                <MudItem xs="12" Class="mt-7">
                                    <HelpingHand />
                                </MudItem>
                                <MudItem xs="12" Class="mt-5">
                                    <DjHand />
                                </MudItem>
                                <MudItem xs="12" Class="mt-5">
                                    <PujariHand />
                                </MudItem>

                            </MudGrid>


                        </MudStack>
                    </MudItem>

                </MudGrid>

            </MudTabPanel>
        </MudTabs>
    </MudItem>


    <MudItem xs="12" class="footer-add-div mt-4">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
            <div class="mt-1">
                <h6> ₹ 13,513.50</h6>
                <p>Inclusive of all taxes</p>
            </div>

            <div class="pb-3">
                <MudButton @onclick="PlaceOrder" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Medium" Class="btn-primary">Place Order</MudButton>

            </div>
        </MudStack>
    </MudItem>

</MudGrid>

@code{

    [Parameter]
    public bool IsClose { get; set; } = true;

    [Parameter]
    public EventCallback<bool> IsCloseChanged { get; set; }


    private async Task OnClose()
    {
        IsClose = false;
        await IsCloseChanged.InvokeAsync(IsClose);
    }

    private async Task PlaceOrder()
    {
        IsClose = true;
        await IsCloseChanged.InvokeAsync(IsClose);
    }

}

