            </MudPaper>

            <MudPaper Outlined="false" Elevation="0" Class="menu-item text-center">
                <MudIcon Icon="@Icons.Material.Filled.Lightbulb" />
                <br/>
                <MudText Typo="Typo.caption">@name</MudText>               
            </MudPaper>

            <MudPaper Outlined="false" Elevation="0" Class="menu-item text-center">
