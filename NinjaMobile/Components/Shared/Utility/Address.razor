<MudDialog Class="address-custom-dialog">
    <DialogContent>

        <MudGrid Spacing="0" Class="address-container">

            
            <MudItem xs="12" sm="12">
                <div class="address-top-bar">
                    <h2>Add New Address</h2>
                </div>

                <div class="address-top-bar-button">
                    <MudIconButton Icon="@Icons.Material.Filled.Close" @onclick="CloseDialog" Size="Size.Medium" />
                </div>
            </MudItem>


            <MudItem xs="12" sm="12">
                <div class="address-form-box">
                    <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">

                        <MudItem xs="12" sm="12">
                            <MudStack Row="true" Spacing="6" AlignItems="AlignItems.Center">
                                <div>
                                    <MudText Style="font-size:14px;font-weight:500;color:#333;">Name</MudText>
                                </div>
                                <div>
                                    @*<ValidationMessage For="@(() => model.Name)" />*@
                                </div>
                            </MudStack>
                            <div class="corporate-text mt-2">
                                <input type="text" placeholder="Please enter your name" />
                            </div>
                        </MudItem>

                        <MudItem xs="12" sm="12" Class="mt-3">
                            <MudStack Row="true" Spacing="6" AlignItems="AlignItems.Center">
                                <div>
                                    <MudText Style="font-size:14px;font-weight:500;color:#333;">Phone Number</MudText>
                                </div>
                                <div>
                                    @*<ValidationMessage For="@(() => model.Phone)" />*@
                                </div>
                            </MudStack>
                            <div class="corporate-text mt-2">
                                <input type="text" placeholder="Your mobile number" />
                            </div>
                        </MudItem>

                        <MudItem xs="12" sm="12" Class="mt-3">

                            <MudGrid Spacing="2">
                                <MudItem xs="6" sm="6">
                                    <MudStack Row="true" Spacing="6" AlignItems="AlignItems.Center">
                                        <div>
                                            <MudText Style="font-size:14px;font-weight:500;color:#333;">Pincode</MudText>
                                        </div>
                                        <div>
                                            @*<ValidationMessage For="@(() => model.Name)" />*@
                                        </div>
                                    </MudStack>
                                    <div class="corporate-text mt-2">
                                        <input type="text" placeholder="Please enter pincode" />
                                    </div>
                                </MudItem>
                                <MudItem xs="6" sm="6">
                                    <MudStack Row="true" Spacing="6" AlignItems="AlignItems.Center">
                                        <div>
                                            <MudText Style="font-size:14px;font-weight:500;color:#333;">State</MudText>
                                        </div>
                                        <div>
                                            @*<ValidationMessage For="@(() => model.Name)" />*@
                                        </div>
                                    </MudStack>
                                    <div class="corporate-text mt-2">
                                        <input type="text" placeholder="Please enter state" />
                                    </div>
                                </MudItem>
                            </MudGrid>
                        </MudItem>

                        <MudItem xs="12" sm="12" Class="mt-3">
                            <MudStack Row="true" Spacing="6" AlignItems="AlignItems.Center">
                                <div>
                                    <MudText Style="font-size:14px;font-weight:500;color:#333;">House Number/Tower/Block</MudText>
                                </div>
                                <div>
                                    @*<ValidationMessage For="@(() => model.Phone)" />*@
                                </div>
                            </MudStack>
                            <div class="corporate-text mt-2">
                                <input type="text" placeholder="Your enter House Number/Tower/Block" />
                            </div>
                        </MudItem>

                        <MudItem xs="12" sm="12" Class="mt-3">
                            <MudStack Row="true" Spacing="6" AlignItems="AlignItems.Center">
                                <div>
                                    <MudText Style="font-size:14px;font-weight:500;color:#333;">Address (Building, Street, Area)</MudText>
                                </div>
                                <div>
                                    @*<ValidationMessage For="@(() => model.Phone)" />*@
                                </div>
                            </MudStack>
                            <div class="corporate-text mt-2">
                                <input type="text" placeholder="Please enter Address (Building, Street, Area)" />
                            </div>
                        </MudItem>

                        <MudItem xs="12" sm="12" Class="mt-3">
                            <MudStack Row="true" Spacing="6" AlignItems="AlignItems.Center">
                                <div>
                                    <MudText Style="font-size:14px;font-weight:500;color:#333;">Address Type</MudText>
                                </div>
                                <div>
                                    @*<ValidationMessage For="@(() => model.Phone)" />*@
                                </div>
                            </MudStack>
                            <div mt-2">
                                <MudRadioGroup T="bool">
                                    <MudRadio T="bool" Size="Size.Small" Color="Color.Success">Home 1</MudRadio>
                                    <MudRadio T="bool" Size="Size.Small" Color="Color.Success">Home 2</MudRadio>
                                    <MudRadio T="bool" Size="Size.Small" Color="Color.Success">Office</MudRadio>
                                </MudRadioGroup>
                            </div>
                        </MudItem>

                        <MudItem xs="12" sm="12" Class="mt-3">
                            <div style="height: 3px; background-color:#EEEEEE;">
                            </div>
                        </MudItem>

                        <MudItem xs="12" sm="12" Class="mt-3">
                            <MudCheckBox T="bool" Size="Size.Small" Color="Color.Default">Make this as my default address</MudCheckBox>
                        </MudItem>

                        <MudItem xs="12" sm="12" Class="mt-3">
                            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                                <button type="button" class="address-cancel">Cancel</button>
                                <button type="button" class="address-save">Save</button>
                            </MudStack>
                        </MudItem>
                    </MudForm>
                </div>
            </MudItem>
        </MudGrid>

    </DialogContent>
</MudDialog>

@code {
#nullable disable


    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    private void CloseDialog()
    {
        MudDialog.Close();
    }
}



