<style>
    .address-custom-dialog {
        width: 560px;
        border-radius: 24px !important;
        background-color: transparent !important;
        box-shadow: none !important;
        overflow: visible !important;
    }

        .address-custom-dialog .mud-dialog-content {
            overflow: visible !important;
            padding: 0px;
            margin: 0px;
            position: relative;
        }
</style>
<style>
    .address-container {
        width: auto;
        position: relative;
    }


    

    .address-top-bar {
        position: relative;
        height: 90px;
        background-color: #3E1268;
        padding: 24px 32px 24px 32px;
        border-top-left-radius: 24px;
        border-top-right-radius: 24px;
    }

        .address-top-bar h2 {
            color: #FFF;
            font-size: 32px;
            font-style: normal;
            font-weight: 500;
            line-height: normal;
            letter-spacing: -0.64px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .address-top-bar p {
            width: 262px;
            color: #FFF;
            font-family: "DM Sans";
            font-size: 14px;
            font-style: normal;
            font-weight: 400;
            line-height: 130%; /* 18.2px */
            letter-spacing: -0.28px;
        }

        .address-top-bar img {
            position: absolute;
            bottom: 0px;
            right: 38px;
            overflow: visible;
        }

    .address-top-bar-button {
        position: absolute;
        background-color: #ffffff;
        border-radius: 50%;
        width: 56px;
        height: 56px;
        top: -28px;
        right: -28px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    

    .address-form-box {
        padding: 32px;
        background-color: #ffffff;
        border-end-start-radius: 24px;
        border-end-end-radius: 24px;
    }

    .address-cancel {
        width: 162px;
        height: 49px;
        border: 1.5px solid #000;
        background-color: #fff;
        border-radius: 40px;
        color: #000;
        font-size: 20px;
        font-style: normal;
        font-weight: 600;
    }

        .address-cancel:hover {
            background-color: #000;
            color: #fff;
        }

    .address-save {
        width: 162px;
        height: 49px;
        background-color: #FF3B30;
        border-radius: 40px;
        color: #fff;
        font-size: 20px;
        font-style: normal;
        font-weight: 600;
        box-shadow: 0px 4px 7.1px 0px #FFFFFF80 inset;
    }

        .address-save:hover {
            box-shadow: none;
        }

    /* Container */
    .corporate-text {
        display: inline-block;
        width: 100%;
    }

        /* Base input style */
        .corporate-text input[type="text"] {
            border-radius: 12px;
            color: #333;
            font-size: 16px;
            font-weight: 400;
            background-color: #F9F9F9;
            border: 1px solid #BBBBBB;
            height: 48px;
            width: 100%; /* full width of container */
            padding: 0 12px;
            transition: height 0.3s ease, border-color 0.3s ease;
        }

            /* Hover border */
            .corporate-text input[type="text"]:hover {
                border-color: #bbb;
            }

            /* Focus: increase height by 5px */
            .corporate-text input[type="text"]:focus {
                height: 58px; /* 48px + 5px */
                border-color: #eee; /* brand color */
                outline: none; /* remove default blue outline */
            }

            /* Placeholder size */
            .corporate-text input[type="text"]::placeholder {
                font-weight: 400;
                font-style: normal;
                font-size: 16px;
                line-height: 100%;
                letter-spacing: -2%;
                color: #A3A3A3;
            }
</style>
